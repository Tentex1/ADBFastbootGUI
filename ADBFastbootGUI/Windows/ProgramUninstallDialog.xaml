<Window x:Class="ADBFastbootGUI.Windows.ProgramUninstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADBFastbootGUI.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        BorderThickness="0"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner"
        Title="ProgramUninstallDialog" Height="143.927" Width="397.369">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" ResizeBorderThickness="0" CaptionHeight="0" CornerRadius="20"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Button x:Name="CancelButton" Content="Cancel" Width="90" Height="30" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="CancelButton_Click"/>
        <TextBox x:Name="AppPackageIDTextBox" Height="23" Margin="31,44,31,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="Header" Content="Enter the Package ID of the application you want to remove." HorizontalAlignment="Left" Margin="28,19,0,0" VerticalAlignment="Top"/>
        <Button x:Name="UninstallAppButton" Content="Uninstall" Width="90" Height="30" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,105,10" Click="UninstallAppButton_Click"/>

    </Grid>
</Window>
