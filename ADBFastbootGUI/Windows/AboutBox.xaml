<Window x:Class="ADBFastbootGUI.Windows.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ADBFastbootGUI.Windows"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="AboutBox" Height="302.429" Width="402.834" ResizeMode="NoResize" ShowInTaskbar="False">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" ResizeBorderThickness="0" CaptionHeight="0" CornerRadius="20"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <TextBlock Text="Thanks for Downloading." FontSize="25" HorizontalAlignment="Center" Margin="20"/>
        <TextBlock Text="Author: Tentex/duranforreal" FontSize="17" VerticalAlignment="Center" Margin="30,-80,0,0"/>
        <TextBlock Text="Product Name: ADBFastbootGUI" FontSize="17" VerticalAlignment="Center" Margin="30,-30,0,0"/>
        <TextBlock x:Name="GithubLink" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="120,205,0,33" TextDecorations="Underline" Cursor="Hand" Height="35">
            <Hyperlink Click="GithubLink_Click" Foreground="Black">Github</Hyperlink>
        </TextBlock>
        <TextBlock x:Name="DonateLink" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,205,120,33" TextDecorations="Underline" Foreground="#FF008BFF" Cursor="Hand" Height="35">
            <Hyperlink Click="DonateLink_Click">Donate</Hyperlink>
        </TextBlock>

        <Button x:Name="CloseButton" Content="Close" Width="82" Height="30" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="CloseButton_Click"/>
    </Grid>
</Window>
